{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs", 
		"lib": ["es5", "es6"],
		"declaration": false,
		"declarationMap": false,
		"sourceMap": true,
		"outDir": "dist",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"baseUrl": "./",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"typeRoots": [
			"node_modules/@types"
		],
		"paths": {
			"@src/*": [ "src/*" ],
			"@services": [ "src/services/index.ts" ],
			"@models/*": [ "src/models/*" ],
			"@routers/*": [ "src/routers/*" ]
		}
	},
	"files": [
		"src/main.ts"
	],
	"exclude": [
		"node_modules",
		"**/*.spec.ts"
	]
}